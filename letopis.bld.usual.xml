<?xml version="1.0" encoding="UTF-8" ?>
<bld>
  <tex_exe>pdflatex</tex_exe>
  <sii>
    <insert titletoc="1" hyperlinks="1" />
    <scts>
      <sct name="preamble.packages">
        <contents>
          pkg ii
        </contents>
        <ii>
          preamble.packages.pdflatex
          preamble.packages.xelatex
        </ii>
        <pkg>
          <pack_list>
             ifxetex ifpdf iflang ifthen

             geometry

             xparse
             titletoc tocloft

             color xcolor colortbl

             graphicx tikz pgffor

             hyperref bookmark

             imakeidx
             etoolbox
             adjustbox
             longtable
             projs
             multicol
             filecontents
             datetime2
             mathtext
             nameref
          </pack_list>
          <pack_opts>
            <datetime2>
             useregional
            </datetime2>
            <tocloft>
             titles
            </tocloft>
            <imakeidx>
             xindy
            </imakeidx>
            <hyperref>
             colorlinks=true
             linktoc=all
             linkcolor=blue
             letterpaper
             unicode
             linktocpage
             bookmarksdepth=subparagraph
             bookmarksnumbered=true
            </hyperref>
            <geometry>
                hmargin={1cm,1cm}
                vmargin={2cm,2cm}
                centering
            </geometry>
            <adjustbox>
             export
            </adjustbox>
          </pack_opts>
        </pkg>
      </sct>
      <sct name="preamble.packages.xelatex">
        <contents>
        </contents>
        <text>
        </text>
      </sct>
    </scts>
    <generate>
      <on>
        preamble.packages
        preamble.packages.xelatex
        preamble.packages.pdflatex
      </on>
    </generate>
  </sii>
  <opts_maker>
    <skip get_opt="1" />
    <load_dat ii_include="1" ii_exclude="1" />
    <join_lines>
      <include_below>
        section
      </include_below>
    </join_lines>
    <sections>
      <include>
      </include>
      <include_with_children>
        preamble
      </include_with_children>
      <ins_order>
         hyperlinks
         titletoc
      </ins_order>
      <generate>
      </generate>
      <append>
        <each>
        </each>
        <only>
          <defs>
          </defs>
        </only>
      </append>
    </sections>
  </opts_maker>
</bld>
